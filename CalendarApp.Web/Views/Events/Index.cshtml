@model IEnumerable<CalendarApp.Domain.Entities.Event>
@using CalendarApp.Domain.Entities
@{
    ViewData["Title"] = "Events";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>Events</h2>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Event
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <h4>No Events Found</h4>
                    <p>You don't have any events scheduled.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Title</th>
                                <th>Date & Time</th>
                                <th>Location</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var eventItem in Model)
                            {
                                <tr>
                                    <td>
                                        <div style="display: inline-block; width: 12px; height: 12px; background-color: @eventItem.Color; border-radius: 2px; margin-right: 8px;"></div>
                                        <strong>@eventItem.Title</strong>
                                        @if (!string.IsNullOrEmpty(eventItem.Description))
                                        {
                                            <br><small class="text-muted">@eventItem.Description.Substring(0, Math.Min(eventItem.Description.Length, 100))@(eventItem.Description.Length > 100 ? "..." : "")</small>
                                        }
                                    </td>
                                    <td>
                                        @if (eventItem.AllDay)
                                        {
                                            <span>@eventItem.StartTime.ToString("MMM dd") (All Day)</span>
                                        }
                                        else
                                        {
                                            <span>@eventItem.StartTime.ToString("MMM dd HH:mm") - @eventItem.EndTime.ToString("MMM dd HH:mm")</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(eventItem.Location))
                                        {
                                            @eventItem.Location
                                        }
                                        else
                                        {
                                            <span class="text-muted">No location</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@eventItem.Status</span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", "Events", new { id = eventItem.Id })" 
                                           class="btn btn-sm btn-outline-primary me-1">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        @if (eventItem.OwnerId == int.Parse(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "0"))
                                        {
                                            <form asp-action="Delete" asp-route-id="@eventItem.Id" method="post" 
                                                  onsubmit="return confirm('Are you sure you want to delete this event?');" 
                                                  style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>