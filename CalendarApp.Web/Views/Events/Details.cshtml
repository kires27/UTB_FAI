@model CalendarApp.Domain.Entities.Event
@using CalendarApp.Domain.Entities
@using System.Security.Claims
@{
    ViewData["Title"] = "Event Details";
}

<div class="container-fluid">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-calendar-event me-2"></i>@Model.Title
                    </h3>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="mb-0 mt-2 text-white-50">@Model.Description</p>
                    }
                    <div class="mt-2">
                        <span class="badge bg-secondary">@Model.Status</span>
                    </div>
                </div>
                <div class="card-body">

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Start Time:</strong></div>
                        <div class="col-sm-9">@Model.StartTime.ToString("f")</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>End Time:</strong></div>
                        <div class="col-sm-9">@Model.EndTime.ToString("f")</div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Location))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Location:</strong></div>
                            <div class="col-sm-9">@Model.Location</div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>All Day:</strong></div>
                        <div class="col-sm-9">
                            <span class="badge bg-@(Model.AllDay ? "success" : "info")">
                                @(Model.AllDay ? "Yes" : "No")
                            </span>
                        </div>
                    </div>

                    @if (Model.IsRecurring && !string.IsNullOrEmpty(Model.RecurrenceRule))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Recurring:</strong></div>
                            <div class="col-sm-9">
                                <span class="badge bg-warning text-dark">Yes (@Model.RecurrenceRule)</span>
                            </div>
                        </div>
                    }

                    @if (Model.ReminderTime.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Reminder:</strong></div>
                            <div class="col-sm-9">@Model.ReminderTime.Value.ToString("f")</div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Color))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Color:</strong></div>
                            <div class="col-sm-9">
                                <div style="display: inline-block; width: 20px; height: 20px; background-color: @Model.Color; border: 1px solid #ccc; border-radius: 3px; vertical-align: middle;"></div>
                                <span class="ms-2">@Model.Color</span>
                            </div>
                        </div>
                    }

                    @{
                        var currentUserId = int.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier) ?? "0");
                        var isAttendee = Model.EventAttendees?.Any(a => a.UserId == currentUserId) ?? false;
                    }

                    @if (isAttendee)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Owner:</strong></div>
                            <div class="col-sm-9">
                                @if (Model.OwnerId == currentUserId)
                                {
                                    <text>You are the owner</text>
                                }
                                else
                                {
                                    <text>
                                        <strong>@Model.Owner?.UserName</strong>
                                        <br>
                                        <small class="text-muted">@Model.Owner?.Email</small>
                                    </text>
                                }
                            </div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Created:</strong></div>
                        <div class="col-sm-9">@Model.CreatedAt.ToString("f")</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Updated:</strong></div>
                        <div class="col-sm-9">@Model.UpdatedAt.ToString("f")</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-people me-2"></i>Attendees (@(Model.EventAttendees?.Count ?? 0))
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.EventAttendees?.Any() == true)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var attendee in Model.EventAttendees)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@attendee.User.UserName</strong>
                                        <br>
                                        <small class="text-muted">@attendee.User.Email</small>
                                    </div>
                                    <div>
                                        <span class="badge bg-@(attendee.Status == AttendeeStatus.Accepted ? "success" : 
                                                         attendee.Status == AttendeeStatus.Declined ? "danger" : 
                                                         attendee.Status == AttendeeStatus.Tentative ? "warning" : "secondary")">
                                            @attendee.Status
                                        </span>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No attendees</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-gear me-2"></i>Actions
                    </h5>
                </div>
                <div class="card-body">
                    <a href="@Url.Action("Index", "Events")" class="btn btn-secondary me-2">
                        <i class="bi bi-arrow-left me-1"></i>Back to Events
                    </a>
                    @if (User.IsInRole("Admin") || Model.OwnerId == int.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier)!))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                            <i class="bi bi-pencil me-1"></i>Edit Event
                        </a>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" 
                              onsubmit="return confirm('Are you sure you want to delete this event?');" 
                              style="display: inline;">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Delete Event
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>